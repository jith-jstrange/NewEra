{
  "name": "newera-wordpress-plugin",
  "version": "1.0.0",
  "description": "A modern WordPress plugin with comprehensive bootstrap and module architecture",
  "private": true,
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "lint:js": "eslint includes/Assets/js --ext .js",
    "lint:css": "stylelint 'includes/Assets/css/**/*.css'",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "prettier --write 'includes/Assets/**/*.{js,css}'",
    "test": "echo 'No frontend tests configured yet'",
    "clean": "rm -rf node_modules package-lock.json",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f wordpress",
    "docker:restart": "docker-compose restart",
    "deploy": "npm run build && composer install --no-dev --optimize-autoloader"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "newera",
    "payments",
    "stripe",
    "subscriptions"
  ],
  "author": "Newera Team",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.55.0",
    "eslint-config-wordpress": "^2.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.1.1",
    "style-loader": "^3.3.3",
    "stylelint": "^16.0.2",
    "stylelint-config-standard": "^36.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {},
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
