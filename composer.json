{
    "name": "newera/plugin",
    "description": "Newera WordPress Plugin - Secure credential storage",
    "type": "wordpress-plugin",
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Newera\\Tests\\": "tests/"
        }
    },
    "autoload": {
        "psr-4": {
            "Newera\\Core\\": "includes/Core/",
            "Newera\\Database\\": "includes/Database/",
            "Newera\\Admin\\": "includes/Admin/",
            "Newera\\Modules\\": "includes/Modules/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-unit": "phpunit tests/CryptoTest.php tests/StateManagerTest.php"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
