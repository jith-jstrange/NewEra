{
  "name": "newera/plugin",
  "description": "Newera WordPress Plugin - Secure credential storage with Stripe payments",
  "type": "wordpress-plugin",
  "require": {
    "stripe/stripe-php": "^10.0",
    "webonyx/graphql-php": "^15.0",
    "firebase/php-jwt": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Newera\\Tests\\": "tests/"
    }
  },
  "autoload": {
    "psr-4": {
      "Newera\\Core\\": "includes/Core/",
      "Newera\\Database\\": "includes/Database/",
      "Newera\\Admin\\": "includes/Admin/",
      "Newera\\Modules\\": "includes/Modules/",
      "Newera\\Projects\\": "includes/Projects/",
      "Newera\\Integrations\\": "includes/Integrations/",
      "Newera\\API\\": "includes/API/",
      "Newera\\API\\REST\\": "includes/API/REST/",
      "Newera\\API\\GraphQL\\": "includes/API/GraphQL/",
      "Newera\\API\\Auth\\": "includes/API/Auth/",
      "Newera\\API\\Middleware\\": "includes/API/Middleware/",
      "Newera\\API\\Webhooks\\": "includes/API/Webhooks/",
      "Newera\\API\\Docs\\": "includes/API/Docs/",
      "Newera\\API\\SDK\\": "includes/API/SDK/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage --coverage-text=coverage.txt --coverage-clover coverage.xml",
    "test-unit": "phpunit tests/CryptoTest.php tests/StateManagerTest.php",
    "test-core": "phpunit tests/CryptoTest.php tests/StateManagerTest.php tests/BootstrapTest.php",
    "test-database": "phpunit tests/WPDBAdapterTest.php",
    "test-modules": "phpunit tests/BaseModuleTest.php tests/ModuleRegistryTest.php"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
